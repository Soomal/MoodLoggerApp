<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:gravity="center"
        android:orientation="vertical">

        <Button
            android:id="@+id/imageButton_logmood"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/button_shape_big"
            android:text="Log your mood"
            android:textColor="#ffffffff" />

        <Button
            android:id="@+id/imageButton_calendar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/imageButton_logmood"
            android:layout_marginTop="10dp"
            android:background="@drawable/button_shape_big"
            android:text="Mood Calendar"
            android:textColor="#ffffffff" />

        <Button
            android:id="@+id/imageButton_chart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/imageButton_calendar"
            android:layout_marginTop="10dp"
            android:background="@drawable/button_shape_big"
            android:text="Mood Chart"
            android:textColor="#ffffffff" />

        <Button
            android:id="@+id/imageButton_reminder"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/imageButton_chart"
            android:layout_marginTop="10dp"
            android:background="@drawable/button_shape_big"
            android:text="Set Reminder"
            android:textColor="#ffffffff" />
    </LinearLayout>
</RelativeLayout>
